{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": "off",
    "camelcase": "off",
    "no-param-reassign": ["error", { "props": false }],
    "class-methods-use-this": [
      "error",
      { "exceptMethods": ["check", "index", "store", "show", "edit", "remove", "showMany"] }
    ]
  }
}
